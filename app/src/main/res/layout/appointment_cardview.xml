<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:id="@+id/appointment_cardview"
    android:layout_marginVertical="5dp"
    card_view:cardBackgroundColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageButton
            android:id="@+id/appointmentSettingsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:background="@null"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/settings_icon" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="225dp"
            android:layout_height="120dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/appointmentSettingsBtn"
            card_view:layout_constraintStart_toEndOf="@+id/linearLayout4"
            card_view:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/appointment_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="5sp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eventDescription"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="TextView"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/attendees_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/dateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:45"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/dateDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="28"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/dateMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sep"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/dateYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2020"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>